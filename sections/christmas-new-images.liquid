  <div class="holder fullwidth">
        <div class="container">
            
            <div class="row justify-content-center mt-0">
            {% for block in section.blocks %}
                {% if block.settings.enable %}
                <div class="col-6 col-sm-6 col-md-3 mt-md-0 p-0">
                    <div class="christmas-item">
                        <div class="christmas-item-image">
                          <a href="{{ block.settings.link }}">
                            {%- assign _img = block.settings.image -%}
                            {%- assign _img_size = '360x360' -%}
                            {%- if _img -%}
                                <img class="lazyload blur-up responsive"
                                     data-src="{{ _img | img_url: _img_size }}"
                                     data-srcset="{{ _img | img_url: _img_size }} 1x, {{ _img | img_url: _img_size, scale: 2 }} 2x"
                                     data-aspectratio="{{ _img.aspect_ratio }}"
                                     data-sizes="auto"
                                     alt="{{ block.settings.title }}">
                            {%- else -%}
                                    {% include 'image-placeholder-aspect-ratio', width: 360, height: 360 %}
                            {%- endif -%}
                          </a>
                            </div>
                      <a href="{{ block.settings.link }}"> <div class="vignette-of-image"></div></a>
                      <div class="gift-details">
                       
                        <div class="seprator"></div>
                        <div class="christmas-item-title text-uppercase ">
                          <a href="{{ block.settings.link }}"> 
                  
                              {{ block.settings.title }}
                   
                          </a>
                         </div>
                      
                      </div>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
            </div>
        </div>
    </div>

{% schema %}
{
"name": "Valentine Gifts",
"class": "index-section",
"settings": [
{
"type": "checkbox",
"id": "enable",
"label": "Enable",
"default": true
},
{
"type": "header",
"content": "General"
},
{
"type": "text",
"id": "title",
"label": "Heading"
}
],
"blocks":[
    {
        "type": "worker",
        "name": "Gifts",
        "settings": [
            {
                "type":"checkbox",
                "id":"enable",
                "label":"Enable",
                "default":true
            },
			{
				"type": "text",
				"id": "link",
				"label": "URL"
			},
            {
                "type": "image_picker",
                "id": "image",
                "label": "Photo",
                "info": "recommended 400x520px"
            },
            {
                "type": "text",
                "id": "title",
                "label":"Name",
                "default":"Christmas Gifts"
            }
         ]
    }
],
"presets": [
{
"name": "Christmas-Gifts",
"category": "Gifts",
"blocks": [
	{
	"type": "worker"
	},
	{
	"type":"worker"
	}
]
}
]
}
{% endschema %}
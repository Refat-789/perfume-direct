{% unless settings.slides_mode %}
<div class="holder fullboxed holder-bg-21 bgcolor-xs-none overflow-hidden {{ section.settings.outer_margin }}">
    <div class="container">
        <div class="row flex-sm-nowrap instagram-first-row no-gutters">
            <div class="col-5 col-sm-4 col-md-3">
                {% if section.settings.link_button_yes %}<a {% if section.settings.link %}href="{{ section.settings.link }}" target="{{ section.settings.link_target }}"{% endif %} class="instagram-feed-text">
                    <span>#</span>
                    <div>{{ section.settings.heading }}</div>
                    </a>{% endif %}
            </div>
            <div class="col-7 col-sm-8 col-md-9">
                <div id="instafeed{{ section.id }}-1" class="instagram-feed-four js-instagram-feed" data-limit='{{ section.settings.insta_limit }}' data-{{ section.settings.insta_source }}='{{ section.settings.insta_source_text }}'></div>
            </div>
        </div>
        <div class="row flex-sm-nowrap instagram-second-row no-gutters">
            <div class="col-4 col-sm-4 col-md-3">
                <div class="instagram-feed-text">
                    {% if section.settings.link_button_yes %}<a {% if section.settings.link %}href="{{ section.settings.link }}" target="{{ section.settings.link_target }}"{% endif %} class="btn-decor">{{ section.settings.link_button_text }}</a></div>{% endif %}
            </div>
            <div class="col-8 col-sm-8 col-md-9">
                <div class="instagram-feed-four js-instagram-feed-container">
                    <div id="instafeed{{ section.id }}-2" class="instagram-feed-four js-instagram-feed" data-limit='{{ section.settings.insta_limit }}' data-{{ section.settings.insta_source }}='{{ section.settings.insta_source_text }}'></div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endunless %}
{% schema %}
{
"name": "Instagram Grid - Style 2",
"class": "index-section",
"settings": [

{
"type": "header",
"content": "Layout"
},
{
"type": "select",
"id": "outer_margin",
"label": "Outer top margin",
"options":[
{"value":"mt-0","label":"None"},
{"value":"mt-1","label":"10px"},
{"value":"mt-2","label":"20px"},
{"value":"mt-3","label":"30px"},
{"value":"mt-4","label":"40px"},
{"value":"mt-5","label":"50px"},
{"value":"mt-6","label":"60px"},
{"value":"mt-65","label":"65px"},
{"value":"mt-7","label":"70px"},
{"value":"mt-8","label":"80px"},
{"value":"mt-9","label":"90px"},
{"value":"mt-10","label":"100px"}
],
"default": "mt-65"
},
{
"type": "header",
"content": "General"
},
{
"type": "text",
"id": "heading",
"label": "Title",
"default":"FOLLOW US ON INSTAGRAM"
},
{
"type": "radio",
"id": "insta_source",
"label": "From where to retrieve the feed",
"options":[
{"value":"username","label":"User Name"},
{"value":"tag","label":"Tag"}
]
},
{
"type": "text",
"id": "insta_source_text",
"label": "Username Or Tag",
"default":"shopify"
},
{
"type": "range", 
"id": "insta_limit",
"label": "Number of pictures to display",
"min": 1,
"max": 12,
"step": 1,
"default": 12
},
{
"type": "checkbox",
"id": "link_button_yes",
"label": "Add link button",
"default":true
},
{
"type": "text",
"id": "link_button_text",
"label": "Link button text",
"default":"Follow Us"
},
{
"type": "url",
"id": "link",
"label": "Link"
},
{
"type": "select",
"id": "link_target",
"label": "Link Target",
"default":"_self",
"options": [
{ "value": "_blank", "label": "New page" },
{ "value": "_self",  "label": "In current page" }
]
}
],
"presets": [
{
"name": "Instagram Grid - Style 2",
"category": "Instagram"
}
]
}
{% endschema %}

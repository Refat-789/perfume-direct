{% unless settings.slides_mode %}
<div class="holder {{ section.settings.outer_margin }}">
    <div class="container">
        <div class="title-wrap text-center"><h2 class="h1-style">{{ section.settings.heading }}</h2></div>
        <div class="instagram-grid-eight-in-row">
            <div class="row">
                <div class="col col-xl-10 aside-col-xl-12 mx-auto">
                    <div id="instafeed{{ section.id }}" class="instagram-feed-full instagram-grid js-instagram-feed" data-limit='{{ section.settings.insta_limit }}' data-{{ section.settings.insta_source }}='{{ section.settings.insta_source_text }}'></div>
                </div>
            </div>
        </div>
        {% if section.settings.link_button_yes %}<div class="text-center mt-3 mt-md-4"><a {% if section.settings.link %}href="{{ section.settings.link }}" target="{{ section.settings.link_target }}"{% endif %} class="btn-decor">{{ section.settings.link_button_text }}</a></div>{% endif %}
    </div>
</div>
{% endunless %}
{% schema %}
{
"name": "Instagram Grid",
"class": "index-section",
"settings": [

{
"type": "header",
"content": "Layout"
},
{
"type": "select",
"id": "outer_margin",
"label": "Outer top margin",
"options":[
{"value":"mt-0","label":"None"},
{"value":"mt-1","label":"10px"},
{"value":"mt-2","label":"20px"},
{"value":"mt-3","label":"30px"},
{"value":"mt-4","label":"40px"},
{"value":"mt-5","label":"50px"},
{"value":"mt-6","label":"60px"},
{"value":"mt-65","label":"65px"},
{"value":"mt-7","label":"70px"},
{"value":"mt-8","label":"80px"},
{"value":"mt-9","label":"90px"},
{"value":"mt-10","label":"100px"}
],
"default": "mt-65"
},
{
"type": "header",
"content": "General"
},
{
"type": "text",
"id": "heading",
"label": "Title",
"default":"FOLLOW US ON INSTAGRAM"
},
{
"type": "radio",
"id": "insta_source",
"label": "From where to retrieve the feed",
"options":[
{"value":"username","label":"User Name"},
{"value":"tag","label":"Tag"}
]
},
{
"type": "text",
"id": "insta_source_text",
"label": "Username Or Tag",
"default":"shopify"
},
{
"type": "range",
"id": "insta_limit",
"label": "Number of pictures to display",
"min": 1,
"max": 24,
"step": 1,
"default": 12,
"info":  "* Up to 12 for username, up to 24 for tags"
},
{
"type": "checkbox",
"id": "link_button_yes",
"label": "Add link button",
"default":true
},
{
"type": "text",
"id": "link_button_text",
"label": "Link button text",
"default":"Follow Us"
},
{
"type": "url",
"id": "link",
"label": "Link"
},
{
"type": "select",
"id": "link_target",
"label": "Link Target",
"default":"_self",
"options": [
{ "value": "_blank", "label": "New page" },
{ "value": "_self",  "label": "In current page" }
]
}
],
"presets": [
{
"name": "Instagram Grid",
"category": "Instagram"
}
]
}
{% endschema %}

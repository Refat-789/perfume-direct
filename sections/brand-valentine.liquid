{% unless settings.slides_mode %}
{% if section.settings.enable %}
    <div class="holder  fullboxed {{ section.settings.outer_margin }} py-5 py-md-10 bg-cover lazyload blur-up" {% if section.settings.image %}data-bgset="{% include 'bgset', image: section.settings.image %}" data-sizes="auto"{% endif %}>
        <div class="container">
            {% if section.settings.heading != blank %}<h2 class="h1-style text-center text-white">{{ section.settings.heading }}</h2>{% endif %}
            <ul class="brand-sl-chris">
                {% for block in section.blocks %}
                    {%- if block.settings.enable -%}
                        <li class="col-6 col-md-3 p-md-4 py-5">
                            <a href="{{ block.settings.link }}" target="{{ block.settings.link_target }}"  title="{{ block.settings.title }}">
                                {% assign _img = block.settings.image %}
                                {% assign _img_size = '300x' %}
                                {% if _img %}
                                    <img class="lazyload blur-up"
                                         data-src="{{ _img | img_url: _img_size }}"
                                         data-srcset="{{ _img | img_url: _img_size }} 1x, {{ _img | img_url: _img_size, scale: 2 }} 2x"
                                         data-aspectratio="{{ _img.aspect_ratio }}"
                                         alt="{{ block.settings.title }}">
                                {%- else -%}
                                    {% include 'image-placeholder-aspect-ratio', width: 150, height: 80, text: '&nbsp;' %}
                                {%- endif -%}
                            </a>
                        </li>
                    {%- endif -%}
                {% endfor %}
            </ul>
            {% if section.settings.link_button_yes %}<div class="text-center mt-5"><a {% if section.settings.link %}href="{{ section.settings.link }}" target="{{ section.settings.link_target }}"{% endif %} class="btn btn-outline outline-white">{{ section.settings.link_button_text }}</a></div>{% endif %}
        </div>
    </div>
{% endif %}
{% endunless %}

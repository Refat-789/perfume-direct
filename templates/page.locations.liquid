       var dataAttr = $(this).closest('.location-box').attr('data-id');
       var dataId = "#"+dataAttr;
       $(this).closest('.map-container').find(dataId).show();
    });
    $('.close-popup').click(function(){
        $('.content-popup').hide();
    });
    $('.map-accordion .location-box').click(function(){
      $('.location-name .lplus').text('+');
      $('.map-accordion .content-mpopup').hide();
       //$('.map-accordion .location-box').removeClass('active');
      if($(this).hasClass('active')){
         $(this).find('.location-name .lplus').text('+');
         $(this).closest('.map-accordion').find('.content-mpopup').hide();
         $(this).removeClass('active');
      }else{
        $('.map-accordion .location-box').removeClass('active');
        $(this).find('.location-name .lplus').text('-');
        $(this).closest('.map-accordion').find('.content-mpopup').show();
        $(this).addClass('active');
      }
    });
  });
</script>
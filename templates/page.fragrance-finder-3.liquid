    <script>
      var paramsObject = {};
      
      const urlParams = new URLSearchParams(window.location.search);
      urlParams.forEach(function (e, w) {
        paramsObject[w] = e;
      })

      var step1 = paramsObject.step1;

      if (step1 === 'someoneElse') {
        $('#step1Ans').text('their');
      }
      
        var href = $('#buttonColor').attr('href');
        $('#flexRadioDefault1').on('input',function(){
            var value = $('input[name="flexRadioDefault"]').val();
            var newHref = updateQueryStringParameter(href + window.location.search, 'step3', value);
            $('#buttonColor').attr('href', newHref);
            $('#buttonColor').removeClass('pe-none');

            $('#buttonColor').addClass('black');

        });

        function updateQueryStringParameter(uri, key, value) {
            var re = new RegExp("([?&])" + key + "=.*?(&|$)", "i");
            var separator = uri.indexOf('?') !== -1 ? "&" : "?";
            if (uri.match(re)) {
                return uri.replace(re, '$1' + key + "=" + value + '$2');
            }
            else {
                return uri + separator + key + "=" + value;
            }
        }
    </script> 

    <script>
      
      var paramsObject = {};
      
      const urlParams = new URLSearchParams(window.location.search);
      urlParams.forEach(function (e, w) {
        paramsObject[w] = e;
      })

      var step1 = paramsObject.step1;
	  var name = paramsObject.step3;

      if (step1 === 'someoneElse') {
        $('#step1Ans').text("Do you know what type of fragrance they like?");
      }
      
      $(document).ready(function () {
        var href = $("#buttonColor").attr("href");
        
        var newHref = updateQueryStringParameter(
            href + window.location.search,
            "step6",
            ""
          );
        console.log(newHref);
        
        $("#buttonColor").attr("href", newHref);
        $("#buttonColor2").attr("href", newHref);


        $('input[name="flexRadioDefault"]').prop("checked", false);

        $(".fragrance-box").click(function (e) {
          $('input[name="flexRadioDefault"]').prop("checked", false);
          $(this).find('input[name="flexRadioDefault"]').prop("checked", true);
          $(".fragrance-box").removeClass("frang-border");
          $(this).addClass("frang-border");

          var href = $("#buttonColor").attr("href");
          var value = $('input[name="flexRadioDefault"]:checked').val();
          var newHref = "/pages/fragrance-finder-step-7"+window.location.search+"&step6="+value;

          $("#buttonColor").attr("href", newHref);
          $("#buttonColor").removeClass("pe-none");
          $("#buttonColor").addClass("black");
        });

        
      });

      function updateQueryStringParameter(uri, key, value) {
        var re = new RegExp("([?&])" + key + "=.*?(&|$)", "i");
        var separator = uri.indexOf("?") !== -1 ? "&" : "?";
        if (uri.match(re)) {
          return uri.replace(re, "$1" + key + "=" + value + "$2");
        } else {
          return uri + separator + key + "=" + value;
        }
      }


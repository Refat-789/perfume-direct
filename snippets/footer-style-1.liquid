<footer class="page-footer  footer-style-1  {{ section.settings.outer_margin }}">
    {% if section.settings.shop_info_yes %}
        <div class="holder bgcolor bgcolor-1 mt-0" {% if settings.shop_info_bg_color != blank %}style="background-color: {{ settings.shop_info_bg_color }}"{% endif %}>
            <div class="container">
                <div class="row shop-features-style3">
                    {% include 'footer_shop_info' %}
                </div>
            </div>
        </div>
    {% endif %}
  
    {% if section.settings.newsletter %}{% include 'newsletter-inline' %}{% endif %}
  
   <div class="col-md-3 col-lg hideonWeb">
                <div class="footer-block collapsed-mobile footerfixd" style="padding-bottom:15px; border-width:100%;border:none!important;">
                    <div class="title">
                        <h4>Reviews on Yotpo</h4>
                    </div>
                        <div class="trustspot-icon">
                          <a href="/pages/perfume-direct-reviews">
                          <div id="y-badges" class="yotpo yotpo-badge badge-init lazy"> </div>
                            </a>
                        </div>
                </div>
            </div>
  <hr class = "hrcolor">
  <div class="col-md-3 col-lg hideonWeb">
                <div class="footer-block collapsed-mobile footerfixd" style="padding-bottom:15px;border:none;">
                    <div class="title">
                        <h4>Get the App</h4>
                    </div>
                        <div class="app-store-icons" style = "    width: 200px;margin: 0 auto;">
                          <div class="icon-wrap apple" style="float:left; height:37px"><a href="https://itunes.apple.com/us/app/perfume-direct/id1462456982?mt=8" target="_blank">  <img class="lazyload blur-up js-prd-img" data-src="{{ 'app-store-badge.png' | asset_url }}" data-sizes="auto"></a></div>
                          <div class="icon-wrap google" style="float:right; height:30px;padding-top: 4px;"><a href="https://play.google.com/store/apps/details?id=scentdirect.android.app" target="_blank"> <img class="lazyload blur-up js-prd-img" data-src="{{ 'google-play-badge.png' | asset_url }}" data-sizes="auto"></a></div>
                        </div>
                </div>
            </div>

    <div class="footer-top container">
        <div class="row py-md-4">
            <div class="{% if section.settings.navigation_4_yes %}col-md-4{% else %}col-md-3{% endif %} col-lg  mobileonlyborder">
                <div class="footer-block collapsed-mobile">
                    {% if section.settings.navigation_1 != blank %}
                        <div class="title onphone">
                            <h4>{{ linklists[section.settings.navigation_1].title }}</h4>
                            <div class="toggle-arrow"></div>
                        </div>
                        <div class="collapsed-content">
                            <ul>
                                {% for link in linklists[section.settings.navigation_1].links %}
                                    <li>
                                        {{ link.title | append:label | link_to: link.url }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% else %}
                        <p>Choose Navigation in Theme Settings / Footer / NAVIGATION 1</p>
                    {% endif %}
                </div>
            </div>
            <div class="{% if section.settings.navigation_4_yes %}col-md-4{% else %}col-md-3{% endif %} col-lg">
                <div class="footer-block collapsed-mobile">
                    {% if section.settings.navigation_2 != blank %}
                        <div class="title">
                            <h4>{{ linklists[section.settings.navigation_2].title }}</h4>
                            <div class="toggle-arrow"></div>
                        </div>
                        <div class="collapsed-content">
                            <ul>
                                {% for link in linklists[section.settings.navigation_2].links %}
                                    <li>
                                        {{ link.title | append:label | link_to: link.url }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                </div>
            </div>
            {% comment %} <div class="{% if section.settings.navigation_4_yes %}col-md-4{% else %}col-md-3{% endif %} col-lg">
                <div class="footer-block collapsed-mobile">
                        <div class="title">
                            <h4>{{ linklists[section.settings.navigation_3].title }}</h4>
                            <div class="toggle-arrow"></div>
                        </div>
                        <div class="collapsed-content">
                            <ul>
                                {% for link in linklists[section.settings.navigation_3].links %}
                                    <li>
                                        {{ link.title | append:label | link_to: link.url }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                </div>
            </div> {% endcomment %}
            <div class="col-md-3 col-lg hideonPhone2">
                <div class="footer-block collapsed-mobile">
                    <div class="title">
                        <h4>Reviews on Yotpo</h4>
                        <div class="toggle-arrow"></div>
                    </div>
                    <div class="collapsed-content">
                        {% comment %}<div class="trustspot-rating-stars">
                            <i class="icon icon-star"></i>
                            <i class="icon icon-star"></i>
                            <i class="icon icon-star"></i>
                            <i class="icon icon-star"></i>
                            <i class="icon icon-star"></i>
                        </div>
                        <span class="trustspot-title">4.8 STARS, OVER 4,000 TRUSTSPOT REVIEWS</span>{% endcomment %}
                        <div class="trustspot-icon">
                          <a href="/pages/perfume-direct-reviews">
                          <div id="y-badges" class="yotpo yotpo-badge badge-init lazy"> </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-lg hideonPhone2">
                <div class="footer-block collapsed-mobile">
                    <div class="title">
                        <h4>Get the App</h4>
                        <div class="toggle-arrow"></div>
                    </div>
                    <div class="collapsed-content">
                        <div class="app-store-icons">
                          <div class="icon-wrap apple"><a href="https://itunes.apple.com/us/app/perfume-direct/id1462456982?mt=8" target="_blank"><img class="lazyload blur-up js-prd-img" data-src="{{ 'app-store-badge.png' | asset_url }}" data-sizes="auto"></a></div>
                          <div class="icon-wrap google"><a href="https://play.google.com/store/apps/details?id=scentdirect.android.app" target="_blank"><img class="lazyload blur-up js-prd-img" data-src="{{ 'google-play-badge.png' | asset_url }}" data-sizes="auto"></a></div>
                        </div>
                    </div>
                </div>
            </div>

            {% comment %} {% if section.settings.navigation_4_yes %}
            <div class="col-md-4 col-lg">
              <div class="footer-block collapsed-mobile">
                {% if section.settings.navigation_4 != blank %}
                <div class="title">
                  <h4>{{ linklists[section.settings.navigation_4].title }}</h4>
                  <div class="toggle-arrow"></div>
                </div>
                <div class="collapsed-content">
                  <ul>
                    {% for link in linklists[section.settings.navigation_4].links %}
                    <li>
                      {{ link.title | append:label | link_to: link.url }}
                    </li>
                    {% endfor %}
                  </ul>
                </div>
                {% else %}
                <p>Choose Navigation in Theme Settings / Footer / NAVIGATION 4</p>
                {% endif %}
              </div>
            </div>
            {% endif %}
            <div class="col-md-8 col-lg-3">
                {% if section.settings.support_time != blank or section.settings.support_time_title != blank %}
                <div class="footer-block collapsed-mobile">
                    <div class="title">
                        <h4>{{ section.settings.support_time_title }}</h4>
                        <div class="toggle-arrow"></div>
                    </div>
                    <div class="collapsed-content">
                        {{ section.settings.support_time }}
                    </div>
                </div>
                {% endif %}
                {% if section.settings.chat_yes %}
                <h4 class="title">{{  section.settings.chat_link }}</h4>
                {% endif %}
            </div> {% endcomment %}
        </div>
    </div>
    <div class="footer-bottom">
        <div class="container">
            <div class="row lined py-1 py-md-2">
                {% comment %} <div class="col-md-2 hidden-mobile">
                    {% include 'footer-logo' %}
                </div> {% endcomment %}
                <div class="col-md-6 col-lg-5 footer-copyright">
                    {{ section.settings.copyright }}
                </div>
                {% comment %} <div class="col-md-auto">
                    {% include 'footer_payments' %}
                </div>{% endcomment %}
                <div class="col-md-auto ml-lg-auto">
                    {% include 'social-media-links' %}
                </div>
            </div>
        </div>
    </div>
</footer>
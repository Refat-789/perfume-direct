{% comment %} <div id="shopify-product-reviews" data-id="{{product.id}}">
{{ product.metafields.spr.reviews }}
</div> {% endcomment %}

{% comment %} <div class="trustspot trustspot-main-widget" data-product-sku="{{ product.id }}" data-name="{{ product.title }}"></div> {% endcomment %}
<div class="yotpo yotpo-main-widget" 
 data-product-id="{{ product.id }}"
 data-name="{{ product.title | escape }}" 
 data-url="{{ shop.url }}{{ product.url }}" 
 data-image-url="{{ product.featured_image | product_img_url: 'large' |replace: '?', '%3F' | replace: '&amp;','%26'}}"
 data-description="{{ product.description | escape }}"
 data-price="{{ variant.price | money_without_currency }}"
 data-currency="{{ shop.currency }}"></div>